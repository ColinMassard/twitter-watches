extends ../base.pug

block variables
  - var template = 'home'

block content
  .home.bg-primary
    .home__wrapper.h-screen
      .relative.isolate.px-6.z-30.flex.items-center.h-full(class='lg:px-8')
        .mx-auto.max-w-2xl.py-32(class='sm:py-48 lg:py-56')
          .text-center
            h1.text-4xl.font-medium.tracking-tight.text-white(class='sm:text-6xl')=home.data.title
            p.mt-6.text-lg.leading-8.text-white=home.data.description

      .home__gallery.absolute.left-0.top-0.w-full.grid.grid-cols-2.gap-5.h-auto(class="lg:grid-cols-4 lg:gap-8")
        each media in home.data.gallery
          figure.home__gallery__media
            img.home__gallery__media__image.img-cover.opacity-0(alt=media.image.alt data-src=media.image.url)

      .home__button.absolute.z-50(class="left-1/2 transform -translate-x-1/2 bottom-8 lg:bottom-20")
        button.py-3.px-4.border-white.border-solid.border.text-base.font-medium.rounded(class="transition-all ease-in-out duration-500 hover:bg-white hover:text-primary lg:py-4 lg:px-8") Find&nbsp;my&nbsp;watch&nbsp;combo
      
      .home__result.w-container.mx-auto.max-w-container-sm.absolute.z-40.opacity-0(class="transform -translate-x-1/2 -translate-y-1/2 top-1/2 left-1/2")
        .p-5.bg-white.rounded.w-full.max-w-2xl.mx-auto
          .text-center.text-lg.text-primary.font-bold(class="lg:text-2xl") Your watch combo
          ul.watch__name-list.grid.grid-cols-2.gap-3(class="pt-2  lg:gap-5 lg:pt-5")
          ul.watch__image-list.grid.grid-cols-2.gap-3.rounded(class="pt-2  lg:gap-5 lg:pt-5")

          .flex.items-center.justify-center.pt-5
            a.home__tweet.py-3.px-4.bg-primary.text-white.border.text-base.font-medium.rounded(class="transition-all ease-in-out duration-500 hover:opacity-75 lg:py-4 lg:px-8" href="https://twitter.com/intent/tweet?text=Hello%20world") Tweet your combo
